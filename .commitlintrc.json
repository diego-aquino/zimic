{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      ["build", "chore", "docs", "feat", "fix", "perf", "refactor", "release", "revert", "style", "test"]
    ],
    "scope-enum": [2, "always", ["ci", "#zimic", "#release", "#eslint", "#eslint-node", "#lint-staged", "#tsconfig"]]
  }
}
