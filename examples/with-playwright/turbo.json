{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "test:turbo": {
      "dependsOn": ["^build"],
      "inputs": [
        "{src,tests}/**/*.{ts,tsx,json}",
        "{package,tsconfig}.json",
        "{playwright,tailwind,postcss,next}.config.{ts,mts,js}"
      ],
      "outputs": ["tests/outputs", "tests/reports"],
      "env": ["CI"]
    }
  }
}
